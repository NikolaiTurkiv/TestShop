<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="114dp"
    android:layout_height="149dp"
    android:layout_marginStart="11dp"
    android:layout_marginTop="8dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_background"
        android:layout_width="114dp"
        android:layout_height="149dp"
        android:scaleType="centerCrop"
        android:src="@color/blue_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         app:shapeAppearanceOverlay="@style/RoundedSquare" />

    <ImageView
        android:id="@+id/img_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/item_background"
        app:srcCompat="@drawable/ic_cirle_plus"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/whiteMain"
        android:textSize="7sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_name"
        tools:text="$ 180,000" />


    <TextView
        android:id="@+id/tv_vategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/background_transparant_gray"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:minWidth="35dp"
        android:paddingStart="7dp"
        android:paddingTop="2dp"
        android:paddingEnd="7dp"
        android:paddingBottom="2dp"
        android:textColor="@color/black"
        android:textSize="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Phones" />


    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/whiteMain"
        android:textSize="8sp"
        app:layout_constraintEnd_toStartOf="@+id/img_button"
        app:layout_constraintStart_toStartOf="@+id/tv_vategory"
        app:layout_constraintTop_toBottomOf="@+id/tv_vategory"
        tools:text="Play Station 5 console" />

</androidx.constraintlayout.widget.ConstraintLayout>