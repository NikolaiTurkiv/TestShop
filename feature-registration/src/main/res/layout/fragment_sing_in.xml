<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.SingInFragment">

    <TextView
        android:id="@+id/sing_in_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/sing_in"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_first_name"
        style="@style/registration_edit_text"
        android:hint="@string/first_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sing_in_label"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/edit_last_name"
        style="@style/registration_edit_text"
        android:hint="@string/last_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_first_name"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/edit_email"
        style="@style/registration_edit_text"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_last_name"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/sign_in_button"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/background_blue"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:text="@string/sing_in"
        android:textColor="@color/whiteMain"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/edit_email"
        app:layout_constraintStart_toStartOf="@+id/edit_email"
        app:layout_constraintTop_toBottomOf="@+id/edit_email" />

    <TextView
        android:id="@+id/have_account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/already_have_an_account"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@+id/sign_in_button"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_button" />

    <TextView
        android:id="@+id/login_text_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/log_in"
        android:textColor="@color/blue_secondary"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/have_account_text"
        app:layout_constraintStart_toEndOf="@+id/have_account_text"
        app:layout_constraintTop_toTopOf="@+id/have_account_text" />

    <ImageView
        android:id="@+id/image_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13.62dp"
        android:src="@drawable/ic_google"
        app:layout_constraintBottom_toBottomOf="@+id/text_google"
        app:layout_constraintEnd_toStartOf="@+id/text_google"
        app:layout_constraintTop_toTopOf="@+id/text_google"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/image_apple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13.62dp"
        android:src="@drawable/ic_apple"
        app:layout_constraintBottom_toBottomOf="@+id/text_apple"
        app:layout_constraintEnd_toStartOf="@+id/text_apple"
        app:layout_constraintTop_toTopOf="@+id/text_apple"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/sign_in_with_google"
        android:textColor="@color/black_main"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_text_button" />

    <TextView
        android:id="@+id/text_apple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/sign_in_with_apple"
        android:textColor="@color/black_main"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_google" />

    <TextView
        android:id="@+id/tv_error_name_sigin"
        style="@style/error_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/edit_first_name"
        app:layout_constraintStart_toStartOf="@+id/edit_first_name"
        app:layout_constraintTop_toBottomOf="@+id/edit_first_name"
        tools:text="Error"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_error_last_name_singing"
        style="@style/error_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/edit_last_name"
        app:layout_constraintStart_toStartOf="@+id/edit_last_name"
        app:layout_constraintTop_toBottomOf="@+id/edit_last_name"
        tools:text="Error"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_error_email_sigin"
        style="@style/error_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/edit_email"
        app:layout_constraintStart_toStartOf="@+id/edit_email"
        app:layout_constraintTop_toBottomOf="@+id/edit_email"
        tools:text="Error"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
