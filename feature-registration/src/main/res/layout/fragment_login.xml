<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.LoginFragment">

    <TextView
        android:id="@+id/welcome_back_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/welcome_back"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_first_name_login"
        style="@style/registration_edit_text"
        android:hint="@string/first_name"
        android:importantForAutofill="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_back_label" />

    <EditText
        android:id="@+id/edit_password"
        style="@style/registration_edit_text"
        android:hint="@string/password"
        android:importantForAutofill="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_first_name_login"
        tools:ignore="TextFields" />

    <TextView
        android:id="@+id/button_login"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/background_blue"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="@color/whiteMain"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/edit_password"
        app:layout_constraintStart_toStartOf="@+id/edit_password"
        app:layout_constraintTop_toBottomOf="@+id/edit_password" />

    <ImageView
        android:id="@+id/img_hide_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_eye_off"
        app:layout_constraintBottom_toBottomOf="@+id/edit_password"
        app:layout_constraintEnd_toEndOf="@+id/edit_password"
        app:layout_constraintTop_toTopOf="@+id/edit_password"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_name_error_login"
        style="@style/error_tv"
        app:layout_constraintEnd_toEndOf="@+id/edit_first_name_login"
        app:layout_constraintStart_toStartOf="@+id/edit_first_name_login"
        app:layout_constraintTop_toBottomOf="@+id/edit_first_name_login"
        tools:text="Error"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_password_error_login"
        style="@style/error_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/edit_password"
        app:layout_constraintStart_toStartOf="@+id/edit_password"
        app:layout_constraintTop_toBottomOf="@+id/edit_password"
        tools:text="Error"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>